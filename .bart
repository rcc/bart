bart_package () {
	VER=$(git describe --tags --always)
	sed -e "s/\(BARTVERSION=\).*/\1${VER}/" -i .bak bart
	ARCHIVE=bart-${VER}.tgz
	tar cvzf $ARCHIVE bart
	echo $ARCHIVE
}

